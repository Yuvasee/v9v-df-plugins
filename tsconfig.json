{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"sourceMap": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"lib": ["es2019", "dom"],
		"skipLibCheck": true,
		"baseUrl": "."
	},
	"include": ["plugins", "client_types", "types"],
	"exclude": ["./node_modules", "./dist", "./declarations"]
}
